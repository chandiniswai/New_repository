                yValueFormatString: "##0.00\"%\"",
                indexLabel: "{label} {y}",
                dataPoints: [
                    { y: 6.45, label: "Schedule", color: "#ff6669" },
                    { y: 3.26, label: "Unschedule", color: "#f7adaf" },
                    { y: 2.26, label: "Missed", color: "#f7978e" }
                ]
            }]
        });
        chart1.render();



        var chart2 = new CanvasJS.Chart("chartContainer2", {
            animationEnabled: true,
            title: {
                text: "COMPLAINTS"
            },
            data: [{
                type: "pie",
