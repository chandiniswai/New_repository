<script src="~/Scripts/CanvasJS.js"></script>

<script>
    window.onload = function () {

        var chart = new CanvasJS.Chart("chartContainer", {
            animationEnabled: true,
            title: {
                text: "SITE INSPECTION"
            },
            data: [{
                type: "pie",
                startAngle: 240,
                yValueFormatString: "##0.00\"%\"",
                indexLabel: "{label} {y}",
                dataPoints: [
                    { y: 6.45, label: "Day", color: "#bdbfc1" },
                    { y: 4.31, label: "Night", color: "#96989a " },
                    { y: 5.06, label: "Surprise", color: "#727376" },
                    { y: 3.26, label: "Others", color: "#4a4a49" }
                ]
            }]
        });
        chart.render();



        var chart1 = new CanvasJS.Chart("chartContainer1", {
            animationEnabled: true,
            title: {
                text: "CUSTOMER VISITS"
            },
            data: [{
                type: "pie",
