                dataPoints: [
                    { y: 8.45, label: "Resolved", color: "#c1c6c8" },
                    { y: 6.26, label: "Unresolved", color: "#97999b" }
                ]
            }]
        });
        chart2.render();



        var chart3 = new CanvasJS.Chart("chartContainer3", {
            animationEnabled: true,
            title: {
                text: "INCIDENTS"
            },
            data: [{
                type: "pie",
                startAngle: 240,
                yValueFormatString: "##0.00\"%\"",
                indexLabel: "{label} {y}",
                dataPoints: [
                    { y: 5.45, label: "Open", color: "#f1575a" },
                    { y: 5.45, label: "Closed", color: "#f79f8e" }
                ]
            }]
        });
        chart3.render();

    }
</script>

