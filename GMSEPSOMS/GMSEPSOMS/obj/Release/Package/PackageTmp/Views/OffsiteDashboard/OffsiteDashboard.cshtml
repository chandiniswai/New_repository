<script src="~/Scripts/CanvasJS.js"></script>

<script>
    window.onload = function () {

        var chart = new CanvasJS.Chart("chartContainer", {
            animationEnabled: true,
            title: {
                text: "SITE INSPECTION"
            },
            data: [{
                type: "pie",
                startAngle: 240,
                yValueFormatString: "##0.00\"%\"",
                indexLabel: "{label} {y}",
                dataPoints: [
                    { y: 6.45, label: "Day", color: "wheat" },
                    { y: 4.31, label: "Night", color: "tan" },
                    { y: 5.06, label: "Surprise", color: "#f9e3bb" },
                    { y: 3.26, label: "Others", color: "#634207" }
                ]
            }]
        });
        chart.render();



        var chart1 = new CanvasJS.Chart("chartContainer1", {
            animationEnabled: true,
            title: {
                text: "CUSTOMER VISITS"
            },
            data: [{
                type: "pie",
                startAngle: 240,
                yValueFormatString: "##0.00\"%\"",
                indexLabel: "{label} {y}",
                dataPoints: [
                    { y: 6.45, label: "Schedule", color: "yellow" },
                    { y: 3.26, label: "Unschedule", color: "#cece1a" },
                    { y: 2.26, label: "Missed", color: "#efff00ba" }
                ]
            }]
        });
        chart1.render();



        var chart2 = new CanvasJS.Chart("chartContainer2", {
            animationEnabled: true,
            title: {
                text: "COMPLAINTS"
            },
            data: [{
                type: "pie",
                startAngle: 240,
                yValueFormatString: "##0.00\"%\"",
                indexLabel: "{label} {y}",
                dataPoints: [
                    { y: 8.45, label: "Resolved", color: "orange" },
                    { y: 6.26, label: "Unresolved", color: "#ff7700" }
                ]
            }]
        });
        chart2.render();



        var chart3 = new CanvasJS.Chart("chartContainer3", {
            animationEnabled: true,
            title: {
                text: "INCIDENTS"
            },
            data: [{
                type: "pie",
                startAngle: 240,
                yValueFormatString: "##0.00\"%\"",
                indexLabel: "{label} {y}",
                dataPoints: [
                    { y: 5.45, label: "Open", color: "#b4efce" },
                    { y: 5.45, label: "Closed", color: "seagreen" }
                ]
            }]
        });
        chart3.render();

    }
</script>
