                    dataPoints: [
                        { y: 42, label: "Shift Continution" },
                        { y: 21, label: "Vacant Post" },
                        { y: 20.5, label: "Additional Deployement Temprory" },
                        { y: 9, label: "Additional Deployement Scheduled" },
                        { y: 3.1, label: "Additional Deployement UnSecheduled" },
                        { y: 4, label: "Service Decrease" }
                    ]
                }]

            });
            chart.render();

            var chart2 = new CanvasJS.Chart("chartContainer2", {
                animationEnabled: true,
                height: 200,
                window: 100,
                //title: {
                //    text: "Estimated Revenue Loss"
                //},
                title: {
                    text: "Estimated Revenue Loss",
                    fontColor: "#2f4f4f",
